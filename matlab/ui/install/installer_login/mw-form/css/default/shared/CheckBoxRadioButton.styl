@import "../variables";

.mwDefaultVisualFamily.mwCheckBox .mwCheckBoxRadioIconNode,
.mwDefaultVisualFamily.mwRadioButton .mwCheckBoxRadioIconNode {
    width: 12px;
    height: 12px;
    border: 1px solid var(--mw-borderColor-tertiary, $mw-borderColor-tertiary);
    background-color: var(--mw-backgroundColor-input, $mw-backgroundColor-input);
}

/* Radio icon fill color */
.mwDefaultVisualFamily.mwRadioButton .mwCheckBoxRadioIconNode .mwCheckBoxRadioIconInner {
    background-color: var(--mw-backgroundColor-inputFill, $mw-backgroundColor-inputFill);
}

/* Check Box icon fill color */
.mwDefaultVisualFamily.mwCheckBox .mwCheckBoxRadioIconNode .mwCheckBoxRadioIconInner {
    border-left: 2px solid var(--mw-backgroundColor-inputFill, $mw-backgroundColor-inputFill);
    border-bottom: 2px solid var(--mw-backgroundColor-inputFill, $mw-backgroundColor-inputFill);
}

.mwDefaultVisualFamily.mwCheckBox .mwCheckBoxRadioIconNode .mwCheckBoxRadioIconInner {
    bottom: 5px;
    width: 8px;
    height: 3px;
    left: 1px;
}

.mwDefaultVisualFamily.mwRadioButton .mwCheckBoxRadioIconNode .mwCheckBoxRadioIconInner {
    height: 6px;
    width: 6px;
    top: 3px;
    left: 3px;
}

/* Radio and CheckBox border color in hover and active state */
.mwDefaultVisualFamily.mwCheckBox .mwCheckBoxRadioIconNode:hover,
.mwDefaultVisualFamily.mwCheckBox .mwCheckBoxRadioIconNode:active,
.mwDefaultVisualFamily.mwRadioButton .mwCheckBoxRadioIconNode:hover,
.mwDefaultVisualFamily.mwRadioButton .mwCheckBoxRadioIconNode:active {
    border-color: var(--mw-borderColor-hover, $mw-borderColor-hover);
}

/* Radio and CheckBox border color in focus state */
.mwDefaultVisualFamily.mwCheckBox.mwCheckBoxFocused .mwCheckBoxRadioIconNode,
.mwDefaultVisualFamily.mwRadioButton.mwRadioButtonFocused .mwCheckBoxRadioIconNode {
    border-color: var(--mw-borderColor-focus, $mw-borderColor-focus);
}
