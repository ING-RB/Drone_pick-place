.mwValidationTooltipDialog .mwTextNode  {
  color: var(--mw-color-primary, $mw-color-primary);
}

/* Error state of widget*/
.mwDefaultVisualFamily.mwWidget.mwValidationError,
.mwDefaultVisualFamily.mwWidget.mwValidationError:hover,
.mwDefaultVisualFamily.mwWidgetHover.mwValidationError {
  border: 1px solid var(--mw-borderColor-error, $mw-borderColor-error);
}

/* Warning Tooltip */
.mwValidationTooltipDialog.mwWarningTooltip .mwContentsNode .mwTextNode {
  border: 1px solid var(--mw-borderColor-info, $mw-borderColor-info);
}

/* Error Tooltip */
.mwValidationTooltipDialog.mwErrorTooltip .mwContentsNode .mwTextNode {
  border: 1px solid  var(--mw-borderColor-error, $mw-borderColor-error);
}

.mwValidationTooltipDialog.mwWarningTooltip .mwIconNode {
  background: var(--mw-backgroundColor-info, $mw-backgroundColor-info);
  background-image: url("../../../images/widgets/visualfamilies/default/tooltip_info_4x12.png");
  background-repeat: no-repeat;
  background-position: center;
}

.mwValidationTooltipDialog.mwErrorTooltip .mwIconNode {
  background: var(--mw-backgroundColor-error, $mw-backgroundColor-error);
  background-image: url("../../../images/widgets/visualfamilies/default/tooltip_exclamation_4x12.png");
  background-repeat: no-repeat;
  background-position: center;
}

.mwValidationTooltipDialog .mwTextNode {
  background: var(--mw-backgroundColor-input, $mw-backgroundColor-input);
}

/*
  Style specific to Combo Box in focused state. This rule enforces
  more specific rule over the mwComboBoxFocused class to ensure the
  validation error related border colors are correctly applied.
*/

.mwDefaultVisualFamily.mwComboBox.mwComboBoxFocused.mwValidationError {
  border: 1px solid var(--mw-borderColor-error, $mw-borderColor-error);
}

