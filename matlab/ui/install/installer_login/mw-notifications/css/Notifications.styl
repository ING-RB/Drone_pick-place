/* Alert and Confirm Dialog */

.mwAlertDialog.mwDialog .mwDialogBody,
.mwConfirmDialog.mwDialog .mwDialogBody,
.mwProgressDialog.mwDialog .mwDialogBody {
    overflow: hidden;
    max-width: 400px;
    box-sizing: content-box;
}

/*mw-dialog sets min-height to be 160px of dialogs.
Changing min-height to keep look similar to earlier version.*/
.mwProgressDialog.mwDialog {
    min-height: 0px;
}

.mwProgressDialog.mwDialog .mwDialogBody,
.mwProgressDialog.mwDialog .mwDialogBody.mwNoButtons {
    overflow: hidden;
    min-height: 0px;
}

.mwAlertDialog .mwIconAndMessageWidget,
.mwConfirmDialog .mwIconAndMessageWidget,
.mwProgressDialog .mwIconAndMessageWidget {
    overflow: hidden;
}

.mwAlertDialog .mwIconAndMessageWidgetIcon,
.mwConfirmDialog .mwIconAndMessageWidgetIcon,
.mwProgressDialog .mwIconAndMessageWidgetIcon,
// set styles for custom icons
// .mwAlertDialog .mwIconAndMessageWidgetIcon img,
// .mwConfirmDialog .mwIconAndMessageWidgetIcon img,
// .mwProgressDialog .mwIconAndMessageWidgetIcon img
{
    float: left;
    padding: 1px;
    max-width: 32px;
    max-height: 32px;
    padding-right: 10px;
}

.mwAlertDialog .mwIconAndMessageWidgetMessage,
.mwConfirmDialog .mwIconAndMessageWidgetMessage,
.mwProgressDialog .mwIconAndMessageWidgetMessage {
    overflow: auto;
    word-wrap: break-word;
    font-size: 14px;
    /* ENABLE Selection */
    -webkit-user-select: initial;
    -moz-user-select: initial;
    -ms-user-select: initial;
    user-select: initial;
}

