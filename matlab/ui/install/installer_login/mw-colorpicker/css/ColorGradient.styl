.mwColorGradient {
    --color-gradient-height: 90px;
    width: 216px;
    height: var(--color-gradient-height);
}

.mwColorGradient.mwColorGradientWithStyles {
    height: var(--color-gradient-height);
}

.mwColorGradient.mwColorGradientWithStyles .mwColorGradientSatVal,
.mwColorGradient.mwColorGradientWithStyles .mwColorGradientHue {
    height: var(--color-gradient-height);
}

.mwColorGradient .mwColorGradientSatVal {
    position: relative;
    display: inline-block;
    width: 180px;
    height: 90px;

    /* Gradients:
    Value: bottom to top - black to transparent;
    Saturation: left to right - white to transparent;    
    */
    background-image: linear-gradient(to top, var(--mw-color-black), transparent), linear-gradient(to right, var(--mw-color-white), transparent);
    /* Hue Color */
    background-color: red;
    cursor: pointer;
}

.mwColorGradient .mwColorGradientDisabled .mwColorGradientSatVal  {
    pointer-events: none;
    opacity: 0.35;
}

.mwColorGradient .mwColorGradientHue {
    position: relative;
    display: inline-block;
    width: 15px;
    height: 90px;
    margin: 0px 0px 0px 9px;
    background: linear-gradient(to bottom, #ff0000 0%, #ffff00 17%, #00ff00 33%, #00ffff 50%, #0000ff 67%, #ff00ff 83%, #ff0000 100%);
    cursor: pointer;
}

.mwColorGradient .mwColorGradientDisabled .mwColorGradientHue {
    pointer-events: none;
    opacity: 0.35;
}

.mwColorGradient .mwColorGradientMarker {
    pointer-events: none;
    z-index: 2;
    position: absolute;
    top: 50px;
    left: 50px;
    width: 6px;
    height: 6px;
    border: 1px solid var(--mw-icon-background-default-white, $mw-icon-background-default-white);
    border-radius: 50%;
    background-color: transparent;
}

.mwColorGradient .mwColorGradientMarker:focus {
    box-shadow: 0px 0px 0px 1px var(--mw-borderColor-focus, $mw-borderColor-focus); /* $color-selection */
}

.mwColorGradient .mwColorGradientHueMarker {
    pointer-events: none;
    z-index: 2;
    position: absolute;
    top: 50px;
    left: -3px;
    width: 19px;
    height: 5px;
    border: 1px solid var(--mw-borderColor-primary, $mw-borderColor-primary); /* $color-mediumgray3 */
    border-radius: 1px;
    background-color: var(--mw-backgroundColor-input, $mw-backgroundColor-input);
}

.mwColorGradient .mwColorGradientHueMarker:focus {
    border: 1px solid var(--mw-borderColor-focus, $mw-borderColor-focus); /* $color-selection */
}
