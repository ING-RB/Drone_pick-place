{
"pcplayer":
{
    "inputs":
    [
        {"name": "xlimits", "kind": "required", "type": ["numeric","vector","numel=2"]},
        {"name": "ylimits", "kind": "required", "type": ["numeric","vector","numel=2"]},
        {"name": "zlimits", "kind": "required", "type": ["numeric","vector","numel=2"]},
        {"name": "MarkerSize", "kind": "namevalue", "type": ["numeric","scalar","positive"]},
        {"name": "BackgroundColor", "kind": "namevalue", "type": ["vector","numeric","numel=3","positive"]},
        {"name": "VerticalAxis", "kind": "namevalue", "type": "choices={'Z','X','Y'}"},
        {"name": "VerticalAxisDir", "kind": "namevalue", "type": "choices={'Up','Down'}"},
        {"name":"Parent","kind":"namevalue","type":"matlab.graphics.axis.Axes"},
        {"name":"ViewPlane","kind":"namevalue","type":"choices={'XY', 'YX', 'XZ', 'ZX', 'YZ', 'ZY'}"},
        {"name":"AxesVisibility","kind":"namevalue","type":"choices={'on', 'off'}"},
        {"name":"Projection","kind":"namevalue","type":"choices={'orthographic', 'perspective'}"},
        {"name":"ColorSource","kind":"namevalue","type":"choices={'X', 'Y', 'Z', 'Intensity','Color', 'Row', 'Column'}"}         
    ]
},

"pcplayer.view":
{
	"inputs":
	[
		{"name":"player", "kind":"required", "type":"pcplayer"},
		{
		     "mutuallyExclusiveGroup":
		     [
		        [
					{"name":"ptCloud","kind":"required","type":"pointCloud"}
		        ],
		        [
					{"name":"xyzPoints","kind":"required","type":[["size=:,3","numeric"],["size=:,:,3","numeric"]]},
					{"name":"color","kind":"ordered","type":[["size=:,3","numeric"],["size=:,:,3","numeric"]]}
		        ],
		        [
					{"name":"xyzPoints","kind":"required","type":[["size=:,3","numeric"],["size=:,:,3","numeric"]]},
					{"name":"colorMap","kind":"ordered","type":[["vector","numeric"],["2d","numeric"]]}
		        ]
		     ]
		 } 
	]
}, 

"pointCloud":
{
    "inputs":
    [
        {"name":"xyzPoints", "kind":"required", "type":[["numeric","size=:,3"],["numeric","size=:,:,3"]]},
        {"name":"Color", "kind":"namevalue", "type":[["numeric","size=:,3"],["numeric","size=:,:,3"]]}, 
        {"name":"Normal", "kind":"namevalue", "type":[["numeric","size=:,3"],["numeric","size=:,:,3"]]}, 
        {"name":"Intensity", "kind":"namevalue", "type":[["numeric","size=:,1"],["numeric","2d"]]}
    ]
},

"pointclouds.internal.pointCloudBase.findNeighborsInRadius":
{
	"inputs":
	[
		{"name":"ptCloud", "kind":"required", "type":"pointCloud"},
		{"name":"point", "kind":"required", "type":[["vector","single","numel=3"],["vector","double","numel=3"]]},
		{"name":"radius", "kind":"required", "type":["positive","integer","scalar","numeric"]},
		{"name":"Sort", "kind":"namevalue", "type":["logical","scalar"]},
		{"name":"MaxLeafChecks", "kind":"namevalue", "type":["positive","integer","scalar","numeric"]}  
	]
},

"pointclouds.internal.pointCloudBase.findPointsInROI":
{
	"inputs":
	[
		{"name":"ptCloud", "kind":"required", "type":"pointCloud"},
		{"name":"roi", "kind":"required", "type":[["vector","single","numel=6"],["vector","double","numel=6"]]},
        {"name":"camMatrix", "kind":"optional", "type":["numeric","size=4,3"]}
	]
},

"pointclouds.internal.pointCloudBase.removeInvalidPoints":
{
	"inputs":
	[
		{"name":"ptCloud", "kind":"required", "type":"pointCloud"}
	]
},

"pointclouds.internal.pointCloudBase.findNearestNeighbors":
{
    "inputs":
    [
        {"name":"ptCloud", "kind":"required", "type":"pointCloud"},
        {"name":"point", "kind":"required", "type":[["vector","single","numel=3"],["vector","double","numel=3"]]},
        {"name":"K", "kind":"required", "type":["positive","integer","scalar","numeric"]},
        {"name":"camMatrix", "kind":"optional", "type":["numeric","size=4,3"]},
        {"name":"Sort", "kind":"namevalue", "type":["logical","scalar"]},
        {"name":"MaxLeafChecks", "kind":"namevalue", "type":["positive","integer","scalar","numeric"]}  
    ]
},

"pointclouds.internal.pointCloudBase.select":
{
	"inputs":
	[
		{"name":"ptCloud", "kind":"required", "type":"pointCloud"},
		{
		    "mutuallyExclusiveGroup":
		    [
		        [
		        	{"name":"row", "kind":"required", "type":["vector","numeric","integer"]},
		        	{"name":"column", "kind":"required", "type":["vector","numeric","integer"]}
		        ],
		        {"name":"indices", "kind":"required", "type":[["vector","numeric","integer"],["vector","logical"]]}
		    ]
		},    
		{"name":"OutputSize", "kind":"namevalue", "type":"choices={'selected','full'}"} 
	]
},

"pointCloud.findPointsInCylinder":
    {
    "inputs":
    [
        {"name":"ptCloud", "kind":"required", "type":["pointCloud","scalar"]},
        {"mutuallyExclusiveGroup":
		    [
		        {"name":"radius", "kind":"required", "type":["positive","numeric","scalar"]},
		        {"name":"radius", "kind":"required", "type":["positive","numeric","numel=2"]}
		    ]
        },
        {"name":"Height", "kind":"namevalue", "type":["positive","scalar","numeric"]},
        {"name":"Center", "kind":"namevalue", "type":["numeric","numel=3"]},
		{"name":"VerticalAxis", "kind":"namevalue", "type":"choices={'X','Y','Z'}"} 
    ]
    }

}
