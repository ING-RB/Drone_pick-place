{
    "name": "liveTasks",
    "description": "Metadata for user authored tasks",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "description": "Friendly name of the task",
            "default": "Custom Task"
        },
        "description": {
            "type": "string",
            "description": "Description of the task",
            "default": ""
        },
        "uniqueId": {
            "type": "string",
            "description": "A unique ID for the task to support changing the task name in the future",
            "default": ""
        },
        "icon": {
            "type": "string",
            "description": "Base64 encoded icon image",
            "default": "data:image/png;base64,"
        },
        "keywords": {
            "type":"string",
            "description": "Comma-separated list of keywords to invoke the task via auto completions",
            "default": ""
        },
        "docLink": {
            "type":"string",
            "description": "MATLAB doc or external URL",
            "default": ""
        }
    },
    "required": ["name"]
}